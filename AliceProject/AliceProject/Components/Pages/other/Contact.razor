@page "/contact"
@rendermode InteractiveServer
@inject ISnackbar Snackbar
@inject IBreadcrumbService BreadcrumbService
@inject IModelService<User> UserService


<PageTitle>Contact</PageTitle>
<MudContainer MaxWidth="MaxWidth.Medium" Class="mt-6">

    <MudText Typo="Typo.h4" GutterBottom="true"><MudIcon Style="font-size: 4rem;" Icon="@Icons.Material.Filled.Email" Title="Email" /> Contact Us</MudText>

    <MudText Typo="Typo.body1" Class="mb-4">
        If you have questions, suggestions, or wish to report an issue, you can do so on our GitHub repository.
    </MudText>

    <MudPaper Elevation="2" Class="p-4 mb-6">
        <MudText Typo="Typo.subtitle1" Class="mb-2">Report issues or send feedback:</MudText>

        <MudButton Href="https://github.com/domnanob/Alice-Project/issues" Target="_blank" Color="Color.Primary" Variant="Variant.Filled" StartIcon="@Icons.Material.Filled.BugReport">
            Go to GitHub Issues
        </MudButton>
    </MudPaper>

    <MudDivider Class="my-4" />

    <MudText Typo="Typo.h6" Class="mb-2"><MudIcon Icon="@Icons.Material.Filled.Phone" Title="Phone" /> Other ways to reach us</MudText>

    <ul style="padding-left: 1.5rem;">
        <li>
            <MudLink Href="https://domnanob.hu" Typo="Typo.body2"><MudIcon Icon="@Icons.Material.Filled.Search" Title="Phone" /> Website: https://domnanob.hu</MudLink>
        </li>
    </ul>

</MudContainer>
@code {
    protected override async Task OnInitializedAsync()
    {
        await BreadcrumbService.SetItems([new(text: "Contact", href: "/contact", icon: Icons.Material.Filled.QuestionAnswer)]);
        await BreadcrumbService.RefreshLayout();

    }
}