@page "/roles/users/{roleId}"
@rendermode InteractiveServer
@inject NavigationManager Navigation
@inject BlazorApp2.Services.IModelService<Role> RoleService
@inject BlazorApp2.Services.IModelService<User> UserService
@inject BlazorApp2.Services.IBreadcrumbService BreadcrumbService
@attribute [Authorize(Roles = "admin")]

<h3>Roles Table</h3>

@if (users == null || roles == null)
{
    <MudProgressCircular Color="Color.Default" Indeterminate="true" />
}
else
{
    <MudTable Items="@users">
        <HeaderContent>
            <MudTh>Id</MudTh>
            <MudTh>FirstName</MudTh>
            <MudTh>LastName</MudTh>
            <MudTh>Email</MudTh>
            <MudTh>Action</MudTh>
        </HeaderContent>
        <RowTemplate>
            <MudTd DataLabel="Nr">@context.Id</MudTd>
                <MudTd DataLabel="Sign">@context.FirstName</MudTd>
                <MudTd DataLabel="Name">@context.LastName</MudTd>
                <MudTd DataLabel="Position">@context.Email</MudTd>
                <MudTd>
                    <MudSelect T="Guid" Label="Roles" @onchange="()=>ChangeRole(context)" @bind-Value="context.RoleId">
                        @foreach (var role in roles)
                        {
                        <MudSelectItem T="Guid" Value="@role.Id">@role.Name</MudSelectItem>
                        }
                    </MudSelect>
                </MudTd>
            </RowTemplate>
            <PagerContent>
                <MudTablePager PageSizeOptions="new int[] { 5, 10, 20, 100 }"
                               RowsPerPageString="@rowsPerPageString"
                               InfoFormat="@infoFormat"
                               AllItemsText="@allItemsText"
                               HorizontalAlignment="@horizontalAlignment" />
            </PagerContent>
        </MudTable>

}

@code {
    [Parameter]
    public string roleId { get; set; }

    private List<Models.User> users;
    private List<Models.Role> roles;
    private int selectedItem { get; set; }

    private HorizontalAlignment horizontalAlignment = HorizontalAlignment.Right;
    private string rowsPerPageString = "Rows per page:";
    private string infoFormat = "{first_item}-{last_item} of {all_items}";
    private string allItemsText = "All";

    protected override async Task OnInitializedAsync()
    {
        users = await UserService.GetAll();
        users = users.Where(x => x.RoleId == Guid.Parse(roleId)).ToList();
        roles = await RoleService.GetAll();
        BreadcrumbService.AddItem(new("Users", $"/roles/users/{roleId}"));
        BreadcrumbService.RefreshLayout();

    }
    private async void ChangeRole(User u)
    {
        await UserService.Update(u);
        Navigation.Refresh(true);
        //Nem refreshel!
    }
}